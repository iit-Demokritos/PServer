<root>
    <description>
        Removes and reinserts the sterotype specified removing all current
        users and features and adding again all users matching the stereotypes
        rule.
    </description>
     <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/stereotype/:ClientCredentials/recreate.xml
    </URL>
    <URL>
       1.0/stereotype/:ClientCredentials/recreate.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            stereotype
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The sterotype name
        </paramdesc>
        <example>
           stereotype=educated
        </example>
    </parameter> 
    <ExURL>

    </ExURL>
    <ExResponse>

    </ExResponse>
</root>