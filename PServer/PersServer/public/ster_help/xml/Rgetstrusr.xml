<root>
    <description>
       for each stereotype matching stereotype pattern, 
       the users matching where are found and returned
    </description>
      <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/stereotype/:ClientCredentials/users.xml
    </URL>
    <URL>
        1.0/stereotype/:ClientCredentials/users.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            stereotype
        </name>
        <status>
            required
        </status>
        <paramdesc>
            Stereotype pattern name
        </paramdesc>
        <example>
            stereotype=educated
        </example>
    </parameter> 
    <parameter>
        <name>
            where
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            User's pattern name. Idf no pattern return all users.
        </paramdesc>
        <example>
            where=kost*
        </example>
    </parameter> 
    <parameter>
        <name>
            pageindex
        </name>
        <status>
            optional
        </status>
        <paramdesc>
           The number of the page with N=20 items. If no pageindex set, return the whole list
        </paramdesc>
        <example>
            pageindex=2
        </example>
    </parameter> 
    <ExURL>

    </ExURL>
    <ExResponse>

    </ExResponse>
</root>