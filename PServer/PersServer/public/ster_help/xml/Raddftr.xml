<root>
    <description>
        Adds to stereotype str all features specified using the corresponding
        degrees. If a feature already exists in the stereotype it instead sets its
        degree to the new degree specified.
    </description>
     <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/stereotype/:ClientCredentials/add_features.xml
    </URL>
    <URL>
        1.0/stereotype/:ClientCredentials/add_features.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            stereotype
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The stereotype name
        </paramdesc>
        <example>
            stereotype=educated
        </example>
    </parameter> 
    <parameter>
        <name>
            features
        </name>
        <status>
            required
        </status>
        <paramdesc>
            A List of pairs feature name and value
        </paramdesc>
        <example>
            features={"ftr_name1":"value","ftr_name2":"value"}
        </example>
    </parameter> 
    <ExURL>

    </ExURL>
    <ExResponse>

    </ExResponse>
</root>