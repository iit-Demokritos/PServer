<root>
    <description>
       Get a list with user's attributes.
    </description>
    <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/personal/:ClientCredentials/Users_Attributes.xml
    </URL>
    <URL>
        1.0/personal/:ClientCredentials/Users_Attributes.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            username
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The user's name
        </paramdesc>
        <example>
            username=kostas
        </example>
    </parameter> 
    <parameter>
        <name>
            attributes
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The attribute pattern
        </paramdesc>
        <example>
           attributes=txt.*
        </example>
    </parameter> 
    <ExURL>
       
    </ExURL>
    <ExResponse>

    </ExResponse>
</root>