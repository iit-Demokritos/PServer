<root>
    <description>
        Returns a list with all features that has a name that satisfies the pattern.
    </description>
    <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/personal/:ClientCredentials/Features.xml
    </URL>
    <URL>
        1.0/personal/:ClientCredentials/Features.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            featuresPattern
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            The pattern name of the feature name.
            If no pattern return all features list
        </paramdesc>
        <example>
           featuresPattern=text.p*
        </example>
    </parameter> 
    <parameter>
        <name>
            pageindex
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            The page index of N features.
            If no page index return all users
        </paramdesc>
        <example>
            pageindex=2
        </example>
    </parameter> 
    <ExURL>
       
    </ExURL>
    <ExResponse>

    </ExResponse>
</root>