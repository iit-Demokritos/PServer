<root>
    <description>
        Get user's personal profile. A lsit with user's feature name and values.
    </description>
    <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/personal/:ClientCredentials/Users_Features.xml
    </URL>
    <URL>
        1.0/personal/:ClientCredentials/Users_Features.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            username
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The user's name 
        </paramdesc>
        <example>
            username=kostas
        </example>
    </parameter> 
    <parameter>
        <name>
            features
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            The feature pattern
        </paramdesc>
        <example>
            features=text.*
        </example>
    </parameter> 
    <ExURL>
       
    </ExURL>
    <ExResponse>

    </ExResponse>
</root>