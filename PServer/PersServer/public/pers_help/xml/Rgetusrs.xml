<root>
    <description>
        Returns a list with all users that has a name that satisfies the pattern.
    </description>
    <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/personal/:ClientCredentials/users.xml
    </URL>
    <URL>
        1.0/personal/:ClientCredentials/users.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            where
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            The pattern name of the username.
            If no pattern return all users list
        </paramdesc>
        <example>
            where=user.p*
        </example>
    </parameter> 
    <parameter>
        <name>
            pageindex
        </name>
        <status>
            optional
        </status>
        <paramdesc>
           The page index of N users.
            If no page index return all users
        </paramdesc>
        <example>
            pageindex=2
        </example>
    </parameter> 
    <ExURL>
       
    </ExURL>
    <ExResponse>

    </ExResponse>
</root>