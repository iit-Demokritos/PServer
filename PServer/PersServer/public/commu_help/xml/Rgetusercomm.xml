<root>
    <description>
        Get list with community names depends to given pattern name 
        If pattern name is empty then will return all user communities from
        PServer
    </description>
    <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/community/:ClientCredentials/communities.xml
    </URL>
    <URL>
        1.0/community/:ClientCredentials/communities.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The Client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            pattern
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            The pattern name
        </paramdesc>
        <example>
            pattern= algorithm.assocType.name
        </example>
    </parameter> 
    <ExURL>
    
    </ExURL>
    <ExResponse>
    
    </ExResponse>
</root>