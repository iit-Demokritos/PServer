<root>
    <description>
        Get a list with feature groups that the given feature belongs
    </description>
    <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/community/:ClientCredentials/feature/feature_groups.xml
    </URL>
    <URL>
        1.0/community/:ClientCredentials/feature/feature_groups.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The Client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            featurename
        </name>
        <status>
            required
        </status>
        <paramdesc>
            the feature name
        </paramdesc>
        <example>
            featurename= 
        </example>
    </parameter> 
    <parameter>
        <name>
            pattern
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            Feature group filter. Returns all feature groups if no pattern exists
        </paramdesc>
        <example>
            pattern=tes*
        </example>
    </parameter> 
    <ExURL>
    
    </ExURL>
    <ExResponse>
    
    </ExResponse>
</root>