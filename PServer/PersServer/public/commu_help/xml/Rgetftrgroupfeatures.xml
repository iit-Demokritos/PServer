<root>
    <description>
        Get list of features which consists the given feature group name
    </description>
    <rt>
        XML/JSON  
    </rt>
    <URL>
        1.0/community/:ClientCredentials/feature_groups/features.xml
    </URL>
    <URL>
        1.0/community/:ClientCredentials/feature_groups/features.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The Client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            name
        </name>
        <status>
            required
        </status>
        <paramdesc>
            the feature group name
        </paramdesc>
        <example>
            name=
        </example>
    </parameter> 
    <parameter>
        <name>
            ftrpattern
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            Feature group features filter. Returns all if no ftrpattern exists
        </paramdesc>
        <example>
            ftrpattern=tes*
        </example>
    </parameter> 
    <ExURL>
    
    </ExURL>
    <ExResponse>
    
    </ExResponse>
</root>
