<root>
    <description>
        Make feature groups with given clustering algorithm and association
        type 
    </description>
    <rt>
        XML/JSON
    </rt>
    <URL>
        1.0/community/:ClientCredentials/cluster/features.xml
    </URL>
    <URL>
        1.0/community/:ClientCredentials/cluster/features.json
    </URL>
    <parameter>
        <name>
            :ClientCredentials
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The Client credentials
        </paramdesc>
        <example>
            name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            algorithm
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The clustering algorithm to make feature groups
        </paramdesc>
        <example>
            algorithm=metis e.g
        </example>
    </parameter> 
    <parameter>
        <name>
            association
        </name>
        <status>
            required
        </status>
        <paramdesc>
            User association type for the clustering
        </paramdesc>
        <example>
            association=cos
        </example>
    </parameter> 
    <parameter>
        <name>
            parameters
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            custom parameters for the clustering algorithm
        </paramdesc>
        <example>
            parameters={“accosThreshold”:”0.999”}
        </example>
    </parameter> 
    <ExURL>
    
    </ExURL>
    <ExResponse>
    
    </ExResponse>
</root>
