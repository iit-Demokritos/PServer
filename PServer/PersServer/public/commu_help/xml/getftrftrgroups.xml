<root>
    <description>
        Get a list with feature groups that the given feature belongs
    </description>
    <rt>
        XML
    </rt>
    <URL>
        commu?clnt=name|pass&#38;com=getftrftrgroups&#38;featurename=txt&#38;pattern=tes*
    </URL>
    <parameter>
        <name>
            clnt
        </name>
        <status>
            required
        </status>
        <paramdesc>
            The Client credentials
        </paramdesc>
        <example>
            clnt=name|pass
        </example>
    </parameter> 
    <parameter>
        <name>
            com
        </name>
        <status>
            required
        </status>
        <paramdesc>
            Command to get feature groups  where a feature belongs
        </paramdesc>
        <example>
            com=getftrftrgroups
        </example>
    </parameter> 
    <parameter>
        <name>
            featurename
        </name>
        <status>
            required
        </status>
        <paramdesc>
            the feature name
        </paramdesc>
        <example>
            featurename=txt
        </example>
    </parameter> 
    <parameter>
        <name>
            pattern
        </name>
        <status>
            optional
        </status>
        <paramdesc>
            Feature group filter. Returns all feature groups if no pattern exists
        </paramdesc>
        <example>
            pattern=tes*
        </example>
    </parameter> 
    <ExURL>
    
    </ExURL>
    <ExResponse>
    
    </ExResponse>
</root>